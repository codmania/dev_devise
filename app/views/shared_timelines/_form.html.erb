<%= form_for([@timeline, @timeline.shared_timelines.build]) do |f| %>
  <%= hidden_field_tag 'user_id', current_user.id %>
  <%= hidden_field_tag 'timeline_id', @timeline.id %>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => 'form-control', :required => true, :type => 'email', :placeholder => "Enter your friend's email" %>
  </div>

  <div class="actions">
    <%= f.submit "Share Timeline" %>
  </div>
<% end %>
