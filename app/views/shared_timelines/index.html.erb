<section>
  <div class="group-wrapper">
    <h3 class="timeline-title">
      <span class="glyphicon glyphicon-time"></span>
      <span>Timeline: <%= @timeline.name %></span>
    </h3>

    <div class="share-form mt30">
      <%= render 'form' %>
    </div>

    <h3>Listing shares</h3>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th>Email</th>
          <th>Remove</th>
        </tr>
      </thead>

      <tbody>
        <% @shared_timelines.each_with_index do |share, index| %>
          <tr>
            <td class="timeline-name">
              <h5><%= index + 1 %></h5>
            </td>
            <td>
              <%= share.email %>
            </td>
            <td>
                <%= link_to [share.timeline, share], method: :delete,
                         data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</section>
